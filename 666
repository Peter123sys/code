/**/
#include<stdio.h>
struct date{//放在main外面可以被多个函数使用 
	int month;
	int day;
	int year;
	};
int main(void)
{
	struct date today={07,31,2014};
//定义一个变量today,类型为struct date
	struct date a={.month=7,.year=2014};	
	printf("Today is date is %i-%i-%i.\n",today.month, 
today.day,today.year);
printf("a is date is %i-%i-%i.\n",a.month, 
a.day,a.year);
	return 0;
}

